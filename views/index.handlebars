<!-- HEADER -->
<div id="header" class="container-fluid">
    <div class="row">
        <h1 class="col-xs-12 col-md-12 text-center h1 heading">Eat-Da-Burger!</h1>
    </div> 
</div>

<!-- NOT-EATEN SECTION -->
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-md-5">
            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li>
                            <div class="col-xs-8 col-md-9">
                                <div id="burgerbox" class="text-center panel panel-default">
                                    {{this.id}}  {{this.burger_name}}
                                </div>
                            </div>
                            <div class="col-xs-4 col-md-3">
                                <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                                    <input type="hidden" name="devoured" value="true">
                                    <button type="submit" id="burgerbutton" class="btn-danger">Eat It!</button>
                                </form>
                            </div>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <!-- SPACER -->
        <div class="col-xs-12 col-md-2">
        </div>

<!-- EAT SECTION -->
        <div class="col-xs-12 col-md-5">
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li>
                            <div class="col-xs-8 col-md-9">
                                <div id="burgerbox" class="text-center panel panel-default">
                                    {{this.id}}  {{this.burger_name}}
                                </div>
                            </div>
                            <div class="col-xs-4 col-md-3">
                                <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                                    <input type="hidden" name="devoured" value="false">
                                </form>
                            </div>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

<!-- ADD BURGER SECTION -->
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <h5 class="text-center ">Enter a burger name you'd like to eat</h5>
            <form class="create-update-form text-center" action="/api/burgers" method="POST">
                <div class="form-group">
                    <input type="text" id="ca" class="newburger" name="burgerName">
                </div>
                <button type="submit" class="btn-danger">Submit</button>
            </form>
        </div>
    </div>
</div>